{
  "manifest_version": 3,
  "name": "flea market downloader",
  "version": "0.1",
  "description": "Скачивает картинки товаров с eBay, Aukro, Avito.",
  "permissions": ["activeTab", "scripting", "downloads", "storage", "cookies"],
  "host_permissions": [
    "*://*.ebay.com/*",
    "*://*.ebay.de/*",
    "*://*.ebay.co.uk/*",
    "*://*.ebay.ca/*",
    "*://*.ebay.com.au/*",
    "*://*.aukro.cz/*",
    "*://*.avito.ru/*",
    "*://*.avito.st/*",
    "*://*.violity.com/*",
    "*://*.olx.ua/*",
    "*://*.olx.pt/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["PlatformFactory.js"],
      "matches": ["<all_urls>"],
      "type": "module"
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.ebay.com/*",
        "*://*.ebay.de/*",
        "*://*.ebay.co.uk/*",
        "*://*.ebay.ca/*",
        "*://*.ebay.com.au/*",
        "*://*.aukro.cz/*",
        "*://*.avito.ru/*",
        "*://*.avito.st/*",
        "*://*.violity.com/*",
        "*://*.olx.ua/*",
        "*://*.olx.pt/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ]
}
